<form action="/products/add-product" method="POST">
  <div class="form-group md-3">
    <label>ID</label>
    <input type="number" class="form-control" name='_id'
    placeholder="Id">
  </div>
  <div class="form-group md-3">
    <label for='pname'> Product Name</label>
    <input type="text" id="pname" class="form-control" name="pName"
    placeholder=" Enter Name">
  </div>
    <div class="form-group mb-3">
    <label for="pdesc">  Product Desc</label>
    <input type="text" id="pdesc" class="form-control" name="pDesc"
    placeholder=" Description">
  </div>
  <div class="form-group md-3">
    <label for="pprice"> Product Price</label>
    <input type="number" id="pprice" class="form-control" name="pPrice"
    placeholder="price">
  </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>